# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 100

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[*.json]
indent_size = 2

[*.toml]
indent_size = 4

[{.gitignore,.gitattributes}]
indent_size = 2